<UserControl x:Class="MifareReaderApp.Views.Controls.Status.DatabaseStatusControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MifareReaderApp.Views.Controls.Status"
             mc:Ignorable="d" Height="35" Width="35" Name="ControlView">
    <Border d:Background="Red" Background="{Binding ElementName=ControlView, Path=StatusColor}" CornerRadius="2">
        <Image Source="/Resources/db.png" Margin="5" />
    </Border>
</UserControl>
