<UserControl x:Class="MifareReaderApp.Views.OperatorPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:constants="clr-namespace:MifareReaderApp.Stuff.Constants"
             xmlns:local="clr-namespace:MifareReaderApp.Views"
             xmlns:models="clr-namespace:MifareReaderApp.ViewModels"
            
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Name="OperatorPageView" 
             DataContext="{Binding ElementName=OperatorPageView, Path=ViewModel}">
    <UserControl.Resources>
        <Style BasedOn="{StaticResource MaterialDesignOutlinedTextBox}" TargetType="TextBox">
            <Setter Property="Foreground" Value="Black" />
        </Style>
        
    </UserControl.Resources>

    <Grid d:Background="{StaticResource MainBackgroundColor}" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <StackPanel>

            <Grid IsEnabled="{Binding FieldsIsEnabled}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <TextBox x:Name="NameTextbox" Grid.Column="0" Margin="10" VerticalAlignment="Top" materialDesign:HintAssist.Hint="{x:Static constants:LocalizedValues.Name}" 
                         Text="{Binding ElementName=OperatorPageView, Path=ViewModel.User.Name}"/>
                <TextBox Grid.Column="1" Margin="10" VerticalAlignment="Top" materialDesign:HintAssist.Hint="{x:Static constants:LocalizedValues.Name2}"
                         Text="{Binding ElementName=OperatorPageView, Path=ViewModel.User.Name2}"/>
                <TextBox Grid.Column="2" Margin="10" VerticalAlignment="Top" materialDesign:HintAssist.Hint="{x:Static constants:LocalizedValues.Surname}"
                         Text="{Binding ElementName=OperatorPageView, Path=ViewModel.User.Surname}"/>
            </Grid>

            <Grid IsEnabled="{Binding FieldsIsEnabled}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <TextBox x:Name="CardNumberTextbox" Grid.Column="0" Margin="10" VerticalAlignment="Top" materialDesign:HintAssist.Hint="{x:Static constants:LocalizedValues.Card}" 
                        Text="{Binding ElementName=OperatorPageView, Path=ViewModel.User.Card}"/>
                <TextBox Grid.Column="1" Margin="10" VerticalAlignment="Top" materialDesign:HintAssist.Hint="{x:Static constants:LocalizedValues.Id1}"
                         Text="{Binding ElementName=OperatorPageView, Path=ViewModel.User.Id1}"/>
                <TextBox Grid.Column="2" Margin="10" VerticalAlignment="Top" materialDesign:HintAssist.Hint="{x:Static constants:LocalizedValues.Id2}"
                         Text="{Binding ElementName=OperatorPageView, Path=ViewModel.User.Id2}"/>
            </Grid>

            <Grid IsEnabled="{Binding FieldsIsEnabled}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="0.5*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center"  >

                    <TextBlock HorizontalAlignment="Center" FontSize="16">Действительна до</TextBlock>

                    <StackPanel Orientation="Horizontal" Margin="0 7 0 0">

                        <DatePicker Name="DatePick" SelectedDate="{Binding User.Before, UpdateSourceTrigger=PropertyChanged}"
                              Width="140" Margin="0 0 5 0" 
                              materialDesign:HintAssist.Hint="{x:Static constants:LocalizedValues.BeforeDate}"
                              Style="{StaticResource MaterialDesignOutlinedDatePicker}"/> <!--Text="{Binding User.BeforeDate, UpdateSourceTrigger=PropertyChanged}"-->

                        <materialDesign:TimePicker Name="TimePick" 
                              Width="140"  Margin="5 0 0 0" SelectedTime="{Binding User.BeforeTime, UpdateSourceTrigger=PropertyChanged}"
                              materialDesign:HintAssist.Hint="{x:Static constants:LocalizedValues.BeforeTime}"
                              Is24Hours="True"
                              Style="{StaticResource MaterialDesignOutlinedTimePicker}"><!--Text="{Binding User.BeforeTime, UpdateSourceTrigger=PropertyChanged}"-->

                        </materialDesign:TimePicker>
                    </StackPanel>

                </StackPanel>

            </Grid>

            <Grid Margin="0 15" IsEnabled="{Binding ButtonsIsEnabled}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Width="110" Margin="5 0" Command="{Binding SaveCommand}" CommandParameter="{Binding User}">Сохранить</Button>
                    <Button Width="110" Margin="5 0" >Удалить</Button>
                </StackPanel>
            </Grid>

        </StackPanel>

    </Grid>
</UserControl>
